generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String       @id @default(cuid())
  title      String    @unique
  articles  Article[]
}

model Article {
  id        String       @id @default(cuid())
  headline   String
  summary    String
  content    String
  image      String? 
  authors     Author[] 
  views      Int       @default(0)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  categories   Category[] 
  isEditorsChoice Boolean // thinking to use checkbox that editor can mark/unmark 
}

model Author {
  id        String     @id @default(cuid())
  name      String
  picture   String?     
  articles  Article[] 
}

model SubscriptionType {
  id            String        @id @default(cuid())
  name          String
  description   String
  features      String[]
  price         Float
  subscriptions Subscription[]
}

model Subscription {
  id          String           @id @default(cuid())
  typeId      String
  createdAt   DateTime         @default(now())
  expiresAt   DateTime
  type        SubscriptionType @relation(fields: [typeId], references: [id])
}
